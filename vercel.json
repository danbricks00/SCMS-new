{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build:web"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "s-maxage=31536000, immutable" },
      "dest": "/assets/$1"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000, immutable" },
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.+\\.[a-zA-Z0-9]+)$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "headers": { 
        "cache-control": "no-cache, no-store",
        "X-SCMS-Version": "1.0.0"
      },
      "dest": "/index.html"
    }
  ],
  "env": {
    "EXPO_ROUTER_APP_ROOT": "./app",
    "EXPO_ROUTER_IMPORT_MODE": "sync",
    "EXPO_DEBUG": "true",
    "NODE_ENV": "production"
  }
}