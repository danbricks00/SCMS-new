{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "app": ["./app"],
      "app/*": ["./app/*"],
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      "constants/*": ["./constants/*"],
      "src/*": ["./src/*"]
    },
    "types": ["node", "react", "react-native"] // Specify only the types you're using
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
